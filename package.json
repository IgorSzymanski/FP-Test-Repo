{
	"name": "fp-test-repo-api",
	"version": "1.0.0",
	"main": "dist/main.js",
	"author": "Igor Szyma≈Ñski",
	"license": "UNLICENSED",
	"private": true,
	"description": "FP Test Repo - API",
	"scripts": {
		"build": "tsc",
		"format": "prettier \"src/**/*.ts\" --write",
		"start:dev": "tsc-watch --onSuccess \"node -r ./tsconfig-paths.js dist/main.js\"",
		"start:debug": "tsc-watch --onSuccess \"node --inspect -r ./tsconfig-paths.js dist/main.js\"",
		"start:prod": "node -r ./tsconfig-paths.js dist/main.js",
		"test": "jest --coverage --verbose",
		"test:watch": "jest --watchAll",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@graphql-modules/core": "^0.7.11",
		"apollo-directives-package": "^1.2.11",
		"apollo-server-express": "^2.9.3",
		"axios": "^0.21.1",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"deepmerge": "^4.2.2",
		"express": "^4.17.1",
		"graphql": "^14.5.8",
		"graphql-compose": "^7.4.3",
		"graphql-compose-pagination": "^6.0.3",
		"graphql-tag-pluck": "^0.8.7",
		"kuroshiro": "^1.1.2",
		"lodash": "^4.17.15",
		"purify-ts": "^0.13.2",
		"ramda": "^0.26.1",
		"reflect-metadata": "0.1.12",
		"remove": "^0.1.5",
		"searchjs": "^1.0.2",
		"voca": "^1.4.0"
	},
	"devDependencies": {
		"@types/body-parser": "^1.17.1",
		"@types/compression": "^1.0.1",
		"@types/express": "^4.17.1",
		"@types/jest": "^24.0.18",
		"@types/lodash": "^4.14.141",
		"@types/node": "^12.12.7",
		"@types/prettier": "^1.18.2",
		"@types/ramda": "^0.26.26",
		"@types/voca": "^1.4.0",
		"gulp": "^4.0.2",
		"gulp-gm": "^0.0.9",
		"gulp-imagemin": "^6.1.0",
		"gulp-newer": "^1.4.0",
		"husky": "^3.0.8",
		"jest": "^24.9.0",
		"prettier": "^1.19.1",
		"pretty-quick": "^2.0.1",
		"ts-jest": "^24.1.0",
		"tsc-watch": "^4.0.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "3.7.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"lint-staged": {
		"*.{ts,js}": [
			[
				"prettier --write",
				"git add"
			]
		]
	}
}
